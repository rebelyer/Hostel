<%= form_for @client do |f| %>
  <div class='client_form'>
    <div class='container'>
      <p>
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </p>

      <p>
        <%= f.label :surname %><br>
        <%= f.text_field :surname %>
      </p>

      <p>
        <%= f.label :phone_number %><br>
        <%= f.text_field :phone_number %>
      </p>

      <p>
        <%= f.label :email_adress %><br>
        <%= f.text_field :email_adress %>
      </p>

      <p>
        <%= f.submit %>
      </p>
    </div>
  </div>
<% end %>
