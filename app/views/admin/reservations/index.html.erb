<p id="notice"><%= notice %></p>

<h1>Listing Reservations</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Surname</th>
      <th>email</th>
      <th>Phone number</th>
      <th>Adults number</th>
      <th>Children number</th>
      <th>Beginning</th>
      <th>End</th>
      <th>Discount</th>
      <th>Room</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.first_name %></td>
        <td><%= reservation.surname %></td>
        <td><%= reservation.email_address %></td>
        <td><%= reservation.phone_number %></td>
        <td><%= reservation.adults_number %></td>
        <td><%= reservation.children_number.to_i %></td>
        <td><%= reservation.beginning %></td>
        <td><%= reservation.end %></td>
        <td><%= reservation.discount %></td>
        <td><%= reservation.room.room_number unless reservation.room == nil %></td>
        <td><%= link_to 'Show', admin_reservation_path(reservation) %></td>
        <td><%= link_to 'Edit', edit_admin_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', admin_reservation_path(reservation), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

