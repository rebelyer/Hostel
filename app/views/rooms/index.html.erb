<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Room number</th>
      <th>Beds number</th>
      <th>Price per adult</th>
      <th>Price per child</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.room_number %></td>
        <td><%= room.beds_number %></td>
        <td><%= room.price_per_adult %></td>
        <td><%= room.price_per_child %></td>
        <td><%= link_to 'Show', room %></td>
        <% if current_user %>
         <td><%= link_to 'Edit', edit_admin_room_path(room) %></td>
         <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room', new_admin_room_path if current_user %>
